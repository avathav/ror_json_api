<p id="notice"><%= notice %></p>

<h1>Listing Api V1 Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Decrtiption</th>
      <th>Is visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_v1_blogs.each do |api_v1_blog| %>
      <tr>
        <td><%= api_v1_blog.title %></td>
        <td><%= api_v1_blog.decrtiption %></td>
        <td><%= api_v1_blog.is_visible %></td>
        <td><%= link_to 'Show', api_v1_blog %></td>
        <td><%= link_to 'Edit', edit_api_v1_blog_path(api_v1_blog) %></td>
        <td><%= link_to 'Destroy', api_v1_blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

